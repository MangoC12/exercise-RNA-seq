{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "bashdb",
      "request": "launch",
      "name": "Bash Debug: pipeline.sh (WSL)",
      "program": "${workspaceFolder}/Scripts/pipeline.sh",
      "args": [],
